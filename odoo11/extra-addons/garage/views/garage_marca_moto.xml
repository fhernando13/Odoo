<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>


        <!-- model.name form view -->
        <record id="marca_moto_view_form" model="ir.ui.view">
            <field name="name">garage.marca_moto.view.form</field>
            <field name="model">garage.marca_moto</field>
            <field name="arch" type="xml">
                <form string="Marcas">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- View tree -->
        <record id="garage.marca_moto_list_view" model="ir.ui.view" >
            <field name="name">Marcas de motociclietas</field>
            <field name="model">garage.marca_moto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <!-- model.name kanban view -->
		<record id="marca_moto_view_kanban" model="ir.ui.view">
			<field name="name">Vista kanban</field>
			<field name="model">garage.marca_moto</field>
			<field name="arch" type="xml">
				<kanban>
 					<field name="name" />
 					<templates>
 						<t t-name="kanban-box">
							 <div class="oe_kanban_global">
								<!-- col 1 -->
                		    	<div class="oe_kanban_info">
									<div class="oe_kanban_bottom_left">

            						</div>
								</div>
                                <div class="o_kanban_record_top">
                                    <ul>
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </ul>
                                </div>
                                
							</div>
                		</t>
 					</templates>
 				</kanban>
			</field>
		</record>


        <record model="ir.actions.act_window" id="garage.marca_moto_action_window">
            <field name="name">Marcas de motocicletas</field>
            <field name="res_model">garage.marca_moto</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

    </data>
</odoo>
