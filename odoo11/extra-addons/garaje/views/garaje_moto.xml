<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- View tree -->
        <record model="ir.ui.view" id="garaje.moto_list_view">
            <field name="name">Motociclietas</field>
            <field name="model">garaje.moto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="marca"/>
                    <field name="matricula"/>
                    <field name="version"/>
                    <field name="tipo"/>
                    <field name="construido"/>
                    <field name="consumo"/>
                    <field name="motor"/>
                    <field name="color"/>
                    <field name="precio"/>
                    <field name="descripcion"/>
                </tree>
            </field>
        </record>


        <!-- View form -->
        <record model="ir.ui.view" id="garaje.moto_form_view">
            <field name="name">Motocicletas</field>
            <field name="model">garaje.moto</field>
            <field name="arch" type="xml">

                <form string="InformaciÃ³n de la moto">
                    <sheet>

                        <separator string="Informacion de la moto"></separator>

                        <group>

                            <group>
                                <field name="name"/>
                                <field name="marca"/>
                                <field name="matricula"/>
                                <field name="version"/>
                                <field name="tipo"/>
                            </group>

                            <group>
                                <field name="construido"/>
                                <field name="consumo"/>
                                <field name="motor"/>
                                <field name="color"/>
                                <field name="precio"/>
                            </group>
            
                        </group>

                        <field name="descripcion"/>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Busqueda -->
        <record model="ir.ui.view" id="garaje.moto_search_view">
            <field name="name">Motociclietas</field>
            <field name="model">garaje.moto</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="marca"/>
                    <field name="matricula"/>
                    <field name="version"/>
                    <field name="tipo"/>
                    <field name="construido"/>
                    <field name="consumo"/>
                    <field name="motor"/>
                    <field name="color"/>
                    <field name="precio"/>
                    <field name="descripcion"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="garaje.moto_action_window">
            <field name="name">motos</field>
            <field name="res_model">garaje.moto</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>